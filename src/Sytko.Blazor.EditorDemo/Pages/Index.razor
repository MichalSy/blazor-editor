@page "/"

<div class="editor-container">
    <EditorView @ref="EditorView" Items="@_items" @bind-SelectedItem="SelectedItem" CurrentActionChanged="OnCurrentActionChanged" >
        <DragItemTemplate>
            <image href="@context.ImageUrl" width="100%" height="100%" />

        </DragItemTemplate>
    </EditorView>

    @if (SelectedItem != null)
    {
        <div class="editor-detail-view" style="left: @(DetailPosition.X)px; top: @(DetailPosition.Y)px;">
            <button class="btn btn-danger" @onclick="RemoveSelectedItem">Remove Selected Object</button>
            <span> </span>
            <button class="btn btn-warning" @onclick="RotateSelectedItem">Rotate 20° </button>

            <span> </span>
            <button class="btn btn-warning" @onclick="ScaleAddSelectedItem">Scale + 20 </button>
        </div>
    }
</div>


<button class="btn btn-primary" @onclick="AddObjectExecute">Add Object</button>
